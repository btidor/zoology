{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"capAdd": [
		"SYS_PTRACE"
	],
	"containerEnv": {
		"LD_PRELOAD": "libjemalloc.so.2"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff"
			]
		}
	},
	"postCreateCommand": "pip3 install --break-system-packages -r requirements.txt",
	"remoteUser": "vscode",
	"runArgs": [
		"--memory=15g",
		"--memory-swap=20g"
	]
}
